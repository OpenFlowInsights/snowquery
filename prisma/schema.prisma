// prisma/schema.prisma
// Multi-tenant data model for SnowQuery

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Using SQLite for local dev
  url      = env("DATABASE_URL")
}

// ── Auth Models (NextAuth) ────────────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(VIEWER)
  
  // Tenant membership
  tenantId      String?
  tenant        Tenant?   @relation(fields: [tenantId], references: [id])
  
  accounts      Account[]
  sessions      Session[]
  queryLogs     QueryLog[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ── Multi-Tenant Models ───────────────────────────────────────────────────

enum Role {
  OWNER      // Tim — full access, manage tenants
  ADMIN      // Client admins — manage their own tenant
  ANALYST    // Can run queries
  VIEWER     // Read-only, can view saved queries
}

model Tenant {
  id          String   @id @default(cuid())
  name        String   // e.g. "Open Flow Insights", "Acme ACO"
  slug        String   @unique // URL-friendly: "open-flow-insights"
  logoUrl     String?
  
  // Snowflake connection (encrypted at rest)
  sfAccount   String
  sfUser      String
  sfPassword  String   // Encrypt in production — see lib/crypto.ts
  sfWarehouse String
  sfDatabase  String
  sfSchema    String   @default("PUBLIC")
  sfRole      String   @default("SYSADMIN")
  
  // Limits
  maxRowsPerQuery  Int  @default(500)
  queryTimeoutSecs Int  @default(30)
  dailyQueryLimit  Int  @default(200)
  
  // Schema cache (stored as JSON)
  schemaCache      String?  // JSON blob of table metadata
  schemaCachedAt   DateTime?
  
  users          User[]
  queryLogs      QueryLog[]
  tableMetadata  TableMetadata[]
  businessTerms  BusinessTerm[]

  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model QueryLog {
  id             String   @id @default(cuid())
  
  tenantId       String
  tenant         Tenant   @relation(fields: [tenantId], references: [id])
  
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  
  question       String   // Natural language input
  generatedSql   String?  // Claude's SQL output
  explanation    String?
  
  rowCount       Int?
  executionMs    Float?
  error          String?
  
  createdAt      DateTime @default(now())

  @@index([tenantId, createdAt])
  @@index([userId, createdAt])
}

// ── Metadata Models ───────────────────────────────────────────────────────

// Enriched metadata for a table — business context that helps Claude
// generate accurate SQL from natural language
model TableMetadata {
  id          String   @id @default(cuid())

  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])

  tableName   String   // Must match the Snowflake table name exactly

  // ── Core Descriptions ──────────────────────────────────
  displayName String?  // Human-friendly name, e.g. "Claims Detail"
  description String?  // What this table represents in business terms
  // e.g. "Line-level claims data for all members attributed to the ACO.
  //        One row per claim line. Includes professional, facility, and pharmacy claims."

  // ── Domain Context ─────────────────────────────────────
  businessOwner  String?  // Who owns this data, e.g. "Finance Team"
  dataSource     String?  // Where data comes from, e.g. "CMS CCLF files"
  updateFrequency String? // How often refreshed, e.g. "Monthly"
  grainDescription String? // What one row represents
  // e.g. "One row = one claim line item for a single service on a single date"

  // ── Query Hints ────────────────────────────────────────
  commonFilters  String?  // Filters users typically apply, as JSON array
  // e.g. '["WHERE claim_status = \'PAID\'", "WHERE service_date >= DATEADD(month, -12, CURRENT_DATE())"]'
  commonJoins    String?  // How this table typically joins to others, as JSON array
  // e.g. '[{"table": "MEMBER_DEMOGRAPHICS", "on": "MEMBER_ID = MEMBER_ID", "type": "LEFT JOIN"}]'
  importantNotes String?  // Caveats, known issues, edge cases
  // e.g. "Pharmacy claims have NULL provider_id. Use pharmacy_npi instead."
  sampleQueries  String?  // Example NL→SQL pairs that work well, as JSON array
  // e.g. '[{"question": "total cost by provider", "sql": "SELECT provider_name, SUM(paid_amount)..."}]'

  columns     ColumnMetadata[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([tenantId, tableName])
  @@index([tenantId])
}

// Enriched metadata for a column
model ColumnMetadata {
  id            String   @id @default(cuid())

  tableMetadataId String
  tableMetadata   TableMetadata @relation(fields: [tableMetadataId], references: [id], onDelete: Cascade)

  columnName    String   // Must match the Snowflake column name exactly

  // ── Core Descriptions ──────────────────────────────────
  displayName   String?  // Human-friendly, e.g. "Paid Amount"
  description   String?  // What this column means in business terms
  // e.g. "The amount actually paid by the payer after adjustments and denials.
  //        Does not include member cost-sharing (copay, coinsurance, deductible)."

  // ── Synonyms & Aliases ─────────────────────────────────
  synonyms      String?  // Alternative names users might say, as JSON array
  // e.g. '["cost", "payment", "reimbursement", "allowed amount"]'
  // This is CRITICAL — users say "cost" but the column is PAID_AMOUNT

  // ── Value Context ──────────────────────────────────────
  sampleValues  String?  // Representative values, as JSON array
  // e.g. '["PAID", "DENIED", "PENDING", "ADJUSTED"]'
  valueMapping  String?  // What coded values mean, as JSON object
  // e.g. '{"1": "Inpatient", "2": "Outpatient", "3": "Professional", "4": "Pharmacy"}'
  unit          String?  // Unit of measure, e.g. "USD", "days", "kg"
  format        String?  // Display format hint, e.g. "currency", "percentage", "date"

  // ── Constraints & Logic ────────────────────────────────
  isRequired    Boolean  @default(false)  // Should almost always be in SELECT
  isPrimaryKey  Boolean  @default(false)
  isForeignKey  Boolean  @default(false)
  foreignKeyRef String?  // e.g. "PROVIDER_DIRECTORY.PROVIDER_ID"
  computedLogic String?  // If derived, how to calculate
  // e.g. "PAID_AMOUNT + MEMBER_RESPONSIBILITY = BILLED_AMOUNT"

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([tableMetadataId, columnName])
}

// Business glossary — maps domain terms to tables/columns
// e.g. "attributed lives" → MEMBER_DEMOGRAPHICS where ATTRIBUTION_STATUS = 'ATTRIBUTED'
model BusinessTerm {
  id          String   @id @default(cuid())

  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])

  term        String   // The business term, e.g. "attributed lives"
  definition  String?  // What it means
  // e.g. "Members currently assigned to the ACO under the MSSP attribution methodology"
  sqlMapping  String?  // How to express it in SQL
  // e.g. "SELECT COUNT(DISTINCT MEMBER_ID) FROM MEMBER_DEMOGRAPHICS WHERE ATTRIBUTION_STATUS = 'ATTRIBUTED'"
  relatedTables String? // Which tables are involved, as JSON array
  // e.g. '["MEMBER_DEMOGRAPHICS"]'

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([tenantId, term])
  @@index([tenantId])
}
